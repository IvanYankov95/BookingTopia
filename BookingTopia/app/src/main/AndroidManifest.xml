<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bg.ittalents.bookingtopia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".controller.activities.RegisterUserActivity" />
        <activity android:name=".controller.activities.LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activities.RegisterCompanyActivity" />
        <activity
            android:name=".controller.activities.AbstractDrawerActivity"
            android:label="@string/title_activity_abstract_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".controller.activities.ViewHotelActivity" />
        <activity android:name=".controller.activities.HomeActivity" />
        <activity android:name=".controller.activities.ViewRoomActivity" />
        <activity android:name=".controller.activities.ReserveActivity" />
        <activity android:name=".controller.activities.CreateHotelActivity" />
        <activity android:name=".controller.activities.CreateRoomActivity" />
        <activity android:name=".controller.activities.HotelListActivity"></activity>
    </application>

</manifest>
